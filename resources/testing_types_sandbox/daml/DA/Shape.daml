module DA.Shape where

data RGBA = RGBA
    with
        r: Int
        g: Int
        b: Int
        alpha: Int
    deriving (Eq, Show)

data Color = 
    Red | 
    Green | 
    Blue |
    Custom [Int] |
    Other RGBA
    deriving (Eq, Show)

data Circle = Circle
    with
        radius: Decimal
        color: Color
    deriving (Eq, Show)

template CircleTemplate
    with
        owner : Party
        circle: Circle
    where
        signatory owner

        choice ReplaceCircle : ()with
            new_circle : Circle
                controller owner
                do
                    create CircleTemplate with owner; circle = new_circle
                    return ()
                    
name = scenario do
  alice <- getParty "Alice"
  submit alice do 
    create CircleTemplate with owner = alice; circle = Circle 12.0000000001 (Other (RGBA 255 100 64 99))